<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.co.tourpang.manager.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <application
        android:name=".TPApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Tourpang" >
        <activity
            android:name="kr.co.tourpang.manager.android.ui.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="kr.co.tourpang.manager.android.account.controller.LoginActivity"
            android:label="@string/app_name" />
        <activity
            android:name="kr.co.tourpang.manager.android.account.controller.JoinActivity"
            android:label="@string/app_name" />
        <activity
            android:name="kr.co.tourpang.manager.android.account.controller.PartnerActivity"
            android:label="@string/app_name" />
        <activity
            android:name="kr.co.tourpang.manager.android.ui.MainFragmentActivity"
            android:label="@string/app_name" />
    </application>

</manifest>